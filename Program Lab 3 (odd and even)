// Create a program that lets the user enter a number then add those numbers together then it will determine if the sum is even or odd.
// Even divisble by two
// Odd not divisible by two
#include <iostream>

using namespace std;

int main()
{
    int num1, num2, num3, sum;

    cout << "Please enter an first integer: ";
    cin >> num1;

    cout << "Please enter the second integer: ";
    cin >> num2;

    cout << "Please enter the third integer: ";
    cin >> num3;

    sum = num1 + num2 + num3;
  
    if (sum % 2 == 0) {

        cout << "The sum of the three inputs is " << sum << " which is an even number";

    }
    else
        cout << "The sum of the three inputs is " << sum << " which is an odd number";

    return 0;
}
// Run program: Ctrl + F5 or Debug > Start Without Debugging menu
// Debug program: F5 or Debug > Start Debugging menu

